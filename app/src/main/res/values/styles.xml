<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NewUI_CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="rippleColor" tools:ignore="PrivateResource">@color/mtrl_btn_ripple_color</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/card_bg_color</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="rippleColor" tools:ignore="PrivateResource">@color/mtrl_btn_ripple_color</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">#cc262626</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DiaglogCardStyle" parent="CardStyle">
        <item name="cardBackgroundColor">#262626</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="DiaglogButtonCardStyle" parent="CardStyle">
        <item name="cardBackgroundColor">#313131</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#cc262626</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ListStyle">
        <item name="android:descendantFocusability">afterDescendants</item>
    </style>
</resources>
