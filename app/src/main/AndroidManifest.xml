<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".WearDeepSeek"
        android:theme="@style/Theme.WearDeepSeek"
        tools:targetApi="31">

        <activity android:name=".activity.MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MenuActivity" android:exported="true" />
        <activity android:name=".activity.AboutActivity" android:exported="true" />
        <activity android:name=".activity.SettingActivity" android:exported="true" />

        <meta-data
            android:name="design_width_in_dp"
            android:value="180" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="220" />
    </application>

</manifest>